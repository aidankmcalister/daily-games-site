generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id        String   @id @default(uuid())
  title     String
  link      String   @unique
  topic     Topic    @default(puzzle)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  played    Boolean  @default(false)

  @@index([topic])
}

enum Topic {
  words
  puzzle
  geography
  trivia
  entertainment
  gaming
  nature
  food
  sports
}
